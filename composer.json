{
    "name": "grafite/scaffold",
    "type": "project",
    "description": "An opinionated Laravel boilerplate.",
    "keywords": [
        "boilerplate",
        "laravel",
        "grafite"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "doctrine/dbal": "^2.9",
        "fideloper/proxy": "^4.2",
        "grafite/charts": "^0.5.0",
        "grafite/database": "^2.3",
        "grafite/forms": "^4.0",
        "intervention/image": "^2.5",
        "laravel/cashier": "^12.0",
        "laravel/framework": "^8.13",
        "laravel/helpers": "^1.1",
        "laravel/sanctum": "^2.6",
        "laravelcollective/auth": "^1.0",
        "lasserafn/php-initial-avatar-generator": "^4.0",
        "livewire/livewire": "^2.2",
        "spatie/laravel-honeypot": "^2.2",
        "tightenco/ziggy": "^0.9.4"
    },
    "require-dev": {
        "facade/ignition": "^2.3.6",
        "fakerphp/faker": "^1.10",
        "itsgoingd/clockwork": "^4.1",
        "laravel/dusk": "^6.0",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/ActivityHelper.php",
            "app/Helpers/NotificationHelper.php",
            "app/Helpers/UserInterfaceHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "check-style": "php-cs-fixer fix --dry-run",
        "fix-style": "php-cs-fixer fix"
    }
}
