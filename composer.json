{
    "name": "grafite/scaffold",
    "type": "project",
    "description": "An opinionated Laravel boilerplate.",
    "keywords": [
        "boilerplate",
        "laravel",
        "grafite"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "aws/aws-sdk-php": "^3.192",
        "bacon/bacon-qr-code": "^2.0",
        "barryvdh/laravel-debugbar": "^3.6",
        "bepsvpt/secure-headers": "^7.2",
        "codegreencreative/laravel-samlidp": "^5.3",
        "dedoc/scramble": "^0.12.0",
        "fahlisaputra/laravel-minify": "^1.1",
        "grafite/auth": "^1.0",
        "grafite/blacksmith": "^1.0",
        "grafite/charts": "^3.0",
        "grafite/database": "^2.5.2",
        "grafite/forms": "^7.0",
        "grafite/html": "^1.0",
        "grafite/maintenance": "^0.6.0",
        "grafite/mission-control-laravel": "^3.4",
        "grafite/support": "^1.1",
        "guzzlehttp/guzzle": "^7.2",
        "hisorange/browser-detect": "^4.5",
        "intervention/image": "^2.5",
        "laravel/cashier": "^15.0",
        "laravel/framework": "^12.0",
        "laravel/helpers": "^1.1",
        "laravel/sanctum": "^4.0",
        "lasserafn/php-initial-avatar-generator": "^4.0",
        "livewire/livewire": "^3.0",
        "pragmarx/google2fa-laravel": "^2.0",
        "pragmarx/recovery": "^0.2.1",
        "pusher/pusher-php-server": "^7.2",
        "shiftonelabs/laravel-sqs-fifo-queue": "^2.0",
        "silviolleite/laravelpwa": "^2.0",
        "spatie/laravel-honeypot": "^4.0",
        "tightenco/ziggy": "^1.0.4",
        "yorcreative/laravel-scrubber": "^3.0"
    },
    "require-dev": {
        "brianium/paratest": "^7.0",
        "fakerphp/faker": "^1.10",
        "laravel/dusk": "^8.0",
        "laravel/sail": "^1.14",
        "laravel/pint": "^1.10",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/ActivityHelper.php",
            "app/Helpers/NotificationHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "check-style": "vendor/bin/pint --test",
        "fix-style": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse",
        "insights": "vendor/bin/phpinsights",
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-clover clover.xml && php coverage-checker.php clover.xml 50",
        "test-debug": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html test-html",
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "npm install",
            "npm run build"
        ]
    }
}
